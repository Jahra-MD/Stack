// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;
struct Stack
{
    int* arr;
    int size;
    int top;
    Stack(int x)
    {
        size =x;
        top =-1;
        arr = new int [size];
    }
    
    void push(int x)
    {
        if(top >size-1)
        {
            cout<<"stack overflow";
        }
        top++;
        arr[top]=x;
        cout<<x<<" is pushed successfully\n";
    }
    int pop()
    {
        if(top==-1)
        {
            cout<<"stack underflow\n";
        }
        top--;
        return 0;
    }
    int peek()
    {
         if(top==-1)
        {
            cout<<"stack underflow\n";
        }
        cout<<arr[top]<<"\t is on the top of stack \n";
        return 0;
        
    }
    void display()
    {   cout<<"the elements in the stack are \n";
        for(int i=top;i>=0;i--)
        {
            cout<<arr[i]<<" ";
        }
        cout<<"\n";
    }
    bool isfull()
    {
        return (top>size-1);
    }
    bool isempty()
    {
        return (top==-1);
    }
    int StackSize()
    {
        return (top+1);
    }
    
};
int main()
{
   Stack s1(10);
   s1.push(12);
   s1.push(2);
   s1.push(5);
   s1.pop();
   s1.peek();
   s1.display();
   cout<<"the size of the stack is "<<s1.StackSize();
}
